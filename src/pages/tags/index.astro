---
import Heading from '@/components/Heading.astro';
import Section from '@/components/Section.astro';
import Base from '@/layouts/Base.astro';
import { AppConfig } from '@/utils/AppConfig';
import { getTagCounts } from '@/utils/posts';

const { title } = AppConfig;
const { description } = AppConfig;

const tagMap: Record<string, number> = await getTagCounts();
---

<Base head={{ title, description }}>
	<Section>
		<div class="mb-8">
			<Heading title="All Tags" />
			<p class="mt-4 text-center text-sm text-zinc-600 dark:text-zinc-400">
				Browse posts by topic
			</p>
		</div>
		<div class="flex flex-wrap items-center justify-center gap-3">
			{
				Object.entries(tagMap).map(([tag, count]) => (
					<a
						href={`/tags/${tag}`}
						class="group relative flex items-center gap-2 rounded-lg border border-zinc-200 bg-white px-4 py-2.5 text-sm font-medium text-zinc-700 transition-all hover:border-blue-300 hover:bg-blue-50 hover:text-blue-600 hover:shadow-sm dark:border-zinc-800 dark:bg-zinc-900 dark:text-zinc-300 dark:hover:border-blue-700/50 dark:hover:bg-blue-950/30 dark:hover:text-blue-400"
					>
						<span>{tag}</span>
						<span class="rounded-full bg-zinc-100 px-2 py-0.5 text-xs font-semibold text-zinc-600 transition-colors group-hover:bg-blue-100 group-hover:text-blue-700 dark:bg-zinc-800 dark:text-zinc-400 dark:group-hover:bg-blue-950/50 dark:group-hover:text-blue-400">
							{count}
						</span>
					</a>
				))
			}
		</div>
	</Section>
</Base>
