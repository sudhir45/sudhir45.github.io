---
import { AppConfig } from '@/utils/AppConfig';
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';
import PresentationCard from '@/components/PresentationCard.astro';
import presentations from '@/data/presentations.json';

const title = `Presentations | ${AppConfig.site_name}`;
const description = 'Browse my collection of security presentations and talks.';
---

<Base head={{ title, description }}>
	<Section>
		<div class="py-8">
			<!-- Header -->
			<div class="mb-8">
				<h1 class="mb-3 text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-100">
					Presentations
				</h1>
				<p class="text-lg text-zinc-600 dark:text-zinc-400">
					Browse my collection of security presentations and talks.
				</p>
			</div>

			<!-- Presentations Grid -->
			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
				{presentations.map((pres) => (
					<PresentationCard 
						slug={pres.slug}
						title={pres.title}
						description={pres.description}
						thumbnail={pres.thumbnail}
						slideCount={pres.slideCount}
						category={pres.category}
					/>
				))}
			</div>

			{presentations.length === 0 && (
				<div class="rounded-xl border border-zinc-200 bg-zinc-50 py-16 text-center dark:border-zinc-800 dark:bg-zinc-900">
					<p class="text-zinc-600 dark:text-zinc-400">No presentations available yet.</p>
				</div>
			)}
		</div>
	</Section>
</Base>
