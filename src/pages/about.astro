---
import { AppConfig } from '@/utils/AppConfig';
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';
import TimelineItem from '@/components/TimelineItem.astro';

const { title, description } = AppConfig;

const experiences = [
	{
		title: "Senior Information Security Engineer",
		company: "Infosys Ltd. @ISG",
		location: "Mumbai",
		dateRange: "July 2023 – Present",
		bullets: [
			"Conducted compliance evaluations for network infrastructure, implementing remediation plans across 5000+ devices",
			"Managed security configurations compliance (ISO 27001, PCI DSS) for organizational subsidiary through audits and process improvements",
			"Reduced manual security configuration tasks by 40% through process automation and standardization",
			"Developed standardized security configurations for Firewalls, Switches, Routers, and NIPS",
			"Managed Skybox Security Suite for automated compliance checks and vulnerability reporting",
			"Executed POC for AlgoSec tool to evaluate network compliance automation"
		]
	},
	{
		title: "Information Security Engineer",
		company: "Infosys Ltd. @ISG",
		location: "Mumbai",
		dateRange: "Oct 2021 – June 2023",
		bullets: [
			"Performed device assessments against network security policies, identifying vulnerabilities for mitigation",
			"Validated security configurations for Cisco ASAs, Checkpoint, FTDs, and Switches/Routers",
			"Handled security queries, metrics collection, and tracked vulnerability remediation"
		]
	},
	{
		title: "Cyber Security Intern",
		company: "Gurugram Police",
		location: "Gurugram",
		dateRange: "Jun 2021 – July 2021",
		bullets: [
			"Analyzed compromised systems and network traffic using FTK Imager, Wireshark, and Burp Suite",
			"Supported cybercrime investigations and analyzed case studies"
		]
	}
];

const contactLinks = [
	{
		label: "Email",
		value: "sudhirdubey558@gmail.com",
		href: "mailto:sudhirdubey558@gmail.com",
		icon: "email"
	},
	{
		label: "LinkedIn",
		value: "dsudhir",
		href: "https://linkedin.com/in/dsudhir",
		icon: "linkedin"
	},
	{
		label: "GitHub",
		value: "sudhir45",
		href: "https://github.com/sudhir45",
		icon: "github"
	}
];
---

<Base head={{ title: `About | ${title}`, description }}>
	<Section>
		<div class="mx-auto max-w-[850px] py-8">
			
			<!-- Intro Section with Contact Links -->
			<div class="mb-12">
				<h1 class="text-4xl font-bold text-gray-900 dark:text-white">
					About <span class="text-orange-600">Sudhir</span>
				</h1>
				<div class="mt-6 space-y-4 text-gray-700 dark:text-gray-300">
					<p>
						I'm <span class="font-bold text-orange-600">Sudhir</span>, a security engineer focused on keeping the whole place safe without letting anything go up in flames.
					</p>
					<p>
						I handle the security posture of thousands of network devices, balancing strict compliance work with steady vulnerability hunting. My background spans both sides of the field: <span class="font-semibold">breaking things</span> and <span class="font-semibold">defending them</span>.
					</p>
					<p>
						I began in digital forensics with the Gurugram Police, then moved to monitoring and securing infrastructure at Infosys.
					</p>
					<p>
						I keep security lean. Automation wherever possible. And years of <span class="font-semibold text-orange-600">CTF work</span> mean I understand the break-in paths attackers look for, which makes shutting those doors a lot easier.
					</p>
				</div>

				<!-- Small Contact Buttons -->
				<div class="mt-8 flex flex-wrap gap-4">
					{contactLinks.map((contact) => (
						<a
							href={contact.href}
							target="_blank"
							rel="noopener noreferrer"
							class="flex items-center gap-2 rounded-lg bg-stone-200 px-4 py-2 text-sm font-medium text-gray-900 transition-colors hover:bg-orange-100 hover:text-orange-600 dark:bg-stone-800 dark:text-gray-100 dark:hover:bg-stone-700 dark:hover:text-orange-400"
						>
							{contact.icon === "email" && (
								<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
								</svg>
							)}
							{contact.icon === "linkedin" && (
								<svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
									<path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"></path>
								</svg>
							)}
							{contact.icon === "github" && (
								<svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
									<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
								</svg>
							)}
							{contact.icon === "website" && (
								<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
								</svg>
							)}
							{contact.label}
						</a>
					))}
				</div>
			</div>

			<!-- Experience Timeline -->
			<div>
				<h2 class="mb-6 text-2xl font-bold text-gray-900 dark:text-white">
					<span class="text-orange-600">Experience</span>
				</h2>
				<p class="mb-6 text-gray-600 dark:text-gray-400">
					My professional journey in CyberSecurity
				</p>
				
				<div class="mt-8">
					{experiences.map((exp, index) => (
						<TimelineItem
							title={exp.title}
							company={exp.company}
							location={exp.location}
							dateRange={exp.dateRange}
							bullets={exp.bullets}
							isLast={index === experiences.length - 1}
						/>
					))}
				</div>
			</div>
		</div>
	</Section>
</Base>
