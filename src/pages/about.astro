---
import { AppConfig, SOCIALS } from '@/utils/AppConfig';
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';
import Social from '@/components/Social.astro';

const { title, description } = AppConfig;
---

<Base head={{ title: `About | ${title}`, description }}>
	<Section>
		<div class="mx-auto max-w-[750px] py-8">

			<!-- Intro -->
			<div class="animate-fade-up mb-10">
				<h1 class="mb-1 text-2xl font-bold tracking-tight text-zinc-900 dark:text-zinc-100">Sudhir</h1>
				<p class="text-sm text-zinc-500 dark:text-zinc-400">Senior Information Security Engineer Â· Mumbai, India</p>
			</div>

			<!-- About -->
			<div class="animate-fade-up stagger-1 mb-10 space-y-4 text-[15px] leading-relaxed text-zinc-700 dark:text-zinc-300">
				<p>
					Currently At <strong class="font-semibold text-zinc-900 dark:text-zinc-100">Infosys</strong>, I secure large-scale network infrastructure using Skybox, AlgoSec, Qualys, CyberArk, and custom automation. I specialize in enterprise network hardening, continuous compliance, and risk-driven vulnerability management across heterogeneous environments.
				</p>
			</div>


			<!-- Links -->
			<div class="animate-fade-up stagger-3 flex items-center gap-4">
				<Social href={SOCIALS.find(s => s.name === 'GitHub')?.url || '#'}>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
