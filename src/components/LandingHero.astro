---
import Section from './Section.astro';
import Social from './Social.astro';
import { SOCIALS } from '@/utils/AppConfig';

const githubUrl = SOCIALS.find((social) => social.name === 'GitHub')?.url || '#';
const linkedinUrl = SOCIALS.find((social) => social.name === 'LinkedIn')?.url || '#';
---

<Section>
	<div id="hero-graph-shell" class="hero-shell py-10 md:py-14">
		<canvas id="hero-graph-canvas" class="hero-graph-canvas" aria-hidden="true"></canvas>

		<div class="relative z-10">
			<p class="animate-fade-up text-xs font-semibold uppercase tracking-[0.2em] text-zinc-500 dark:text-zinc-400">Security Engineer</p>
			<h1 class="animate-fade-up stagger-1 mt-3 text-6xl font-semibold tracking-tight text-zinc-900 dark:text-zinc-100 md:text-8xl">
				SUDHIR
			</h1>
			<p class="animate-fade-up stagger-2 mt-4 max-w-2xl text-base text-zinc-600 dark:text-zinc-400 md:text-lg">
				Enterprise Network Security, Compliance, and Automation.
			</p>

			<div class="animate-fade-up stagger-3 mt-8 flex items-center gap-3">
