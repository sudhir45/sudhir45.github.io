---
import Section from './Section.astro';
import Social from './Social.astro';
import { SOCIALS } from '@/utils/AppConfig';

const githubUrl = SOCIALS.find((social) => social.name === 'GitHub')?.url || '#';
const linkedinUrl = SOCIALS.find((social) => social.name === 'LinkedIn')?.url || '#';
---

<Section>
	<div id="hero-graph-shell" class="hero-shell py-12 md:py-20 relative overflow-hidden">
		<!-- Premium Animated SVG Background -->
		<div class="absolute inset-0 pointer-events-none" aria-hidden="true">
			<svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" class="absolute inset-0 z-0">
				<defs>
					<pattern id="cyber-grid" width="40" height="40" patternUnits="userSpaceOnUse">
						<path d="M 40 0 L 0 0 0 40" fill="none" class="stroke-zinc-200/50 dark:stroke-zinc-800/50" stroke-width="1"/>
					</pattern>
					<radialGradient id="glow-grad" cx="50%" cy="50%" r="50%">
						<stop offset="0%" stop-color="currentColor" class="text-zinc-300 dark:text-zinc-700" stop-opacity="0.15" />
						<stop offset="100%" stop-color="currentColor" stop-opacity="0" />
					</radialGradient>
				</defs>
				<!-- Grid -->
				<rect width="100%" height="100%" fill="url(#cyber-grid)" class="mask-radial-right" />
				<!-- Animated glowing nodes -->
				<circle cx="85%" cy="30%" r="250" fill="url(#glow-grad)" class="animate-pulse-slow mask-radial-right" />
				<circle cx="70%" cy="70%" r="180" fill="url(#glow-grad)" class="animate-pulse-slow [animation-delay:2s] mask-radial-right" />
			</svg>
		</div>

		<div class="relative z-10 pl-2">
			<p class="animate-fade-up text-sm font-bold uppercase tracking-[0.25em] text-orange-600 dark:text-orange-500">Security Engineer</p>
			<h1 class="animate-fade-up stagger-1 mt-3 text-7xl font-bold tracking-tighter text-zinc-900 dark:text-zinc-50 md:text-8xl lg:text-9xl">
				SUDHIR
			</h1>
			<p class="animate-fade-up stagger-2 mt-6 max-w-2xl text-lg font-medium text-zinc-600 dark:text-zinc-400 md:text-xl">
				Enterprise Network Security, Compliance, and Automation.
			</p>

			<div class="animate-fade-up stagger-3 mt-10 flex items-center gap-4">
				<span class="text-xs font-semibold uppercase tracking-[0.15em] text-zinc-400 dark:text-zinc-500">Elsewhere</span>
				<div class="h-px w-8 bg-zinc-200 dark:bg-zinc-800"></div>
				<Social href={githubUrl}>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						></path>
					</svg>
				</Social>
				<Social href={linkedinUrl}>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"
						></path>
					</svg>
				</Social>
				<Social href="/rss.xml">
					<svg viewBox="0 0 24 24" width="1.2em" height="1.2em">
						<path
							fill="currentColor"
							d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"
						></path>
					</svg>
				</Social>
			</div>
		</div>
	</div>
</Section>

<style>
	.mask-radial-right {
		mask-image: linear-gradient(to right, transparent 0%, rgba(0,0,0,0.1) 30%, rgba(0,0,0,1) 70%, rgba(0,0,0,1) 100%);
		-webkit-mask-image: linear-gradient(to right, transparent 0%, rgba(0,0,0,0.1) 30%, rgba(0,0,0,1) 70%, rgba(0,0,0,1) 100%);
	}
	
	.animate-pulse-slow {
		animation: pulse-slow 8s ease-in-out infinite alternate;
	}

	@keyframes pulse-slow {
		0% { opacity: 0.6; transform: scale(0.95) translate(0, 0); }
		100% { opacity: 1; transform: scale(1.05) translate(-10px, 10px); }
	}

	@media (prefers-reduced-motion: reduce) {
		.animate-pulse-slow {
			animation: none;
		}
	}
</style>
