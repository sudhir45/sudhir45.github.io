---
import Section from './Section.astro';
import Social from './Social.astro';
import { SOCIALS } from '@/utils/AppConfig';

const githubUrl = SOCIALS.find((social) => social.name === 'GitHub')?.url || '#';
const linkedinUrl = SOCIALS.find((social) => social.name === 'LinkedIn')?.url || '#';
---

<Section>
	<div id="hero-graph-shell" class="hero-shell pt-6 pb-12 md:pt-10 md:pb-16 relative overflow-hidden flex flex-col md:flex-row items-center justify-between min-h-[400px]">
		
		<!-- Left Side: Text Content -->
		<div class="relative z-10 w-full md:w-[50%] lg:w-[45%] pl-2 shrink-0">
			<p class="animate-fade-up text-sm font-bold uppercase tracking-[0.25em] text-orange-600 dark:text-orange-500">Security Engineer</p>
			<h1 class="animate-fade-up stagger-1 mt-3 text-7xl font-bold tracking-tighter text-zinc-900 dark:text-zinc-50 md:text-8xl lg:text-9xl">
				SUDHIR
			</h1>
			<p class="animate-fade-up stagger-2 mt-6 max-w-xl text-lg font-medium text-zinc-600 dark:text-zinc-400 md:text-xl">
				Enterprise Security, Compliance, and Automation.
			</p>

			<div class="animate-fade-up stagger-3 mt-10 flex items-center gap-4">
				<span class="text-xs font-semibold uppercase tracking-[0.15em] text-zinc-400 dark:text-zinc-500">Elsewhere</span>
				<div class="h-px w-8 bg-zinc-200 dark:bg-zinc-800"></div>
				<Social href={githubUrl}>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						></path>
					</svg>
				</Social>
				<Social href={linkedinUrl}>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"
						></path>
					</svg>
				</Social>
				<Social href="/rss.xml">
					<svg viewBox="0 0 24 24" width="1.2em" height="1.2em">
						<path
							fill="currentColor"
							d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"
						></path>
					</svg>
				</Social>
			</div>
		</div>

		<!-- Right Side: Fluid NetSec_Mon Visual -->
		<div class="relative z-0 mt-8 md:mt-0 w-full md:w-[50%] lg:w-[55%] flex items-center justify-end md:items-start md:pt-0 aspect-square md:aspect-auto md:h-[450px] opacity-90 mix-blend-multiply dark:mix-blend-screen overflow-visible">
			<!-- Radar Sweep Effect Background -->
			<div class="absolute inset-0 z-0 flex items-center justify-center translate-x-[5%] md:translate-x-[15%] opacity-30">
				<div class="h-[140%] w-[140%] md:h-[120%] md:w-[120%] animate-[spin_12s_linear_infinite] rounded-full border border-orange-500/10 bg-[conic-gradient(from_0deg,transparent_0_340deg,rgba(249,115,22,0.15)_360deg)] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_30%,transparent_100%)]"></div>
			</div>

			<!-- Technically Accurate Enterprise Security Topology -->
			<svg class="relative z-10 w-[110%] md:w-[130%] h-auto md:-translate-y-6 md:translate-x-8 opacity-90" viewBox="0 0 400 300" preserveAspectRatio="xMidYMid meet">
				<defs>
					<filter id="glow-mon" x="-20%" y="-20%" width="140%" height="140%">
						<feGaussianBlur stdDeviation="2" result="blur" />
						<feComposite in="SourceGraphic" in2="blur" operator="over" />
					</filter>
					<filter id="glow-strong" x="-50%" y="-50%" width="200%" height="200%">
						<feGaussianBlur stdDeviation="4" result="blur" />
						<feComposite in="SourceGraphic" in2="blur" operator="over" />
					</filter>
				</defs>

				<!-- Static Lines (Physical Infrastructure) -->
				<!-- Main Secure Data Path: INET -> WAF -> ZTA -> APP -->
				<path class="stroke-zinc-500/40 dark:stroke-zinc-400/30" stroke-width="1.5" fill="none" d="M40 100 L120 180 L200 120 L320 160" />
				<!-- Authentication Path: ZTA <-> IDP -->
				<path class="stroke-purple-500/40" stroke-width="1.5" stroke-dasharray="4 4" fill="none" d="M200 120 L280 50" />
				<!-- Telemetry/Logging Paths to SIEM -->
				<path class="stroke-zinc-500/20 dark:stroke-zinc-400/10" stroke-width="1" stroke-dasharray="2 2" fill="none" d="M120 180 L230 240 M200 120 L230 240 M280 50 L230 240 M320 160 L230 240" />

				<!-- Animated Packets / Data Flows -->
				<!-- Valid User Traffic (Blue) -->
				<circle r="2.5" fill="#3b82f6" filter="url(#glow-strong)">
					<animateMotion dur="5s" repeatCount="indefinite" path="M40 100 L120 180 L200 120 L320 160" />
				</circle>
				<!-- Blocked Attack Traffic (Red) - Fades out at WAF -->
				<circle r="3" fill="#ef4444" filter="url(#glow-strong)">
					<animateMotion dur="3s" repeatCount="indefinite" path="M40 100 L120 180" />
					<animate attributeName="opacity" values="1; 1; 0; 0" keyTimes="0; 0.8; 0.95; 1" dur="3s" repeatCount="indefinite" />
				</circle>
				<circle r="2" fill="#ef4444" filter="url(#glow-strong)">
					<animateMotion dur="2s" begin="1s" repeatCount="indefinite" path="M40 100 L120 180" />
					<animate attributeName="opacity" values="1; 1; 0; 0" keyTimes="0; 0.8; 0.95; 1" dur="2s" repeatCount="indefinite" />
				</circle>
				<!-- Auth Verification (Purple) -->
				<circle r="2" fill="#a855f7" filter="url(#glow-mon)">
					<animateMotion dur="2.5s" repeatCount="indefinite" path="M200 120 L280 50 L200 120" />
				</circle>
				<!-- Telemetry to SIEM (Yellow) -->
				<circle r="1.5" fill="#eab308" filter="url(#glow-mon)">
					<animateMotion dur="4s" repeatCount="indefinite" path="M120 180 L230 240" />
				</circle>
				<circle r="1.5" fill="#eab308" filter="url(#glow-mon)">
					<animateMotion dur="3.5s" begin="1.5s" repeatCount="indefinite" path="M200 120 L230 240" />
				</circle>
				<circle r="1" fill="#eab308" filter="url(#glow-mon)">
					<animateMotion dur="4.5s" begin="0.5s" repeatCount="indefinite" path="M320 160 L230 240" />
				</circle>

				<!-- Architectural Nodes -->
				
				<!-- INET: Public Internet (40, 100) -->
				<g transform="translate(40, 100)">
					<circle r="6" fill="#64748b" fill-opacity="0.2" stroke="#64748b" stroke-width="1" />
					<text x="-35" y="18" class="fill-zinc-400 text-[7px] font-mono tracking-widest opacity-70">INET_01</text>
				</g>

				<!-- EDGE_WAF: Firewall / WAF (120, 180) -->
				<g transform="translate(120, 180)">
					<circle r="14" fill="#f97316" fill-opacity="0.1" stroke="#f97316" stroke-width="1" class="animate-[pulse_2s_ease-in-out_infinite]" />
					<circle r="6" fill="#f97316" filter="url(#glow-strong)" />
					<text x="-40" y="-12" class="fill-orange-600 dark:fill-orange-400 text-[8px] font-bold font-mono tracking-widest opacity-90">EDGE_WAF</text>
				</g>

				<!-- ZTA_PROXY: Zero Trust Gateway (200, 120) -->
				<g transform="translate(200, 120)">
					<circle r="18" fill="#3b82f6" fill-opacity="0.05" stroke="#3b82f6" stroke-width="0.5" class="animate-[pulse_3s_ease-in-out_infinite]" />
					<circle r="10" fill="#3b82f6" fill-opacity="0.15" stroke="#3b82f6" stroke-width="1.5" />
					<circle r="4" fill="#3b82f6" filter="url(#glow-strong)" />
					<text x="-25" y="-22" class="fill-blue-600 dark:fill-blue-400 text-[9px] font-bold font-mono tracking-widest opacity-100">ZTA_PROXY</text>
				</g>

				<!-- IDP_AUTH: Identity Provider (280, 50) -->
				<g transform="translate(280, 50)">
					<circle r="12" fill="#a855f7" fill-opacity="0.1" stroke="#a855f7" stroke-width="0.5" class="animate-[pulse_4s_ease-in-out_infinite]" />
					<circle r="5" fill="#a855f7" filter="url(#glow-mon)" />
					<text x="15" y="4" class="fill-purple-600 dark:fill-purple-400 text-[8px] font-mono tracking-widest opacity-90">IDP_AUTH</text>
				</g>

				<!-- APP_CORE: Internal Applications (320, 160) -->
				<g transform="translate(320, 160)">
					<circle r="14" fill="#10b981" fill-opacity="0.1" stroke="#10b981" stroke-width="1" />
					<circle r="6" fill="#10b981" filter="url(#glow-mon)" />
					<text x="16" y="5" class="fill-emerald-600 dark:fill-emerald-400 text-[9px] font-mono tracking-widest opacity-90">APP_CORE</text>
				</g>

				<!-- SIEM_SOC: Security Operations / Logging (230, 240) -->
				<g transform="translate(230, 240)">
					<circle r="16" fill="#eab308" fill-opacity="0.1" stroke="#eab308" stroke-width="0.5" class="animate-pulse" />
					<circle r="7" fill="#eab308" filter="url(#glow-strong)" />
					<circle r="3" fill="#ffffff" opacity="0.8" />
					<text x="20" y="5" class="fill-yellow-600 dark:fill-yellow-500 text-[9px] font-mono font-bold tracking-widest animate-[pulse_2s_ease-in-out_infinite]">SIEM_SOC</text>
				</g>
			</svg>
		</div>
	</div>
</Section>

<style>
	.animate-dash {
		animation: dash 35s linear infinite;
	}
	.animate-dash-reverse {
		animation: dash 45s linear infinite reverse;
	}
	@keyframes dash {
		to {
			stroke-dashoffset: 1000;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.animate-dash, .animate-dash-reverse {
			animation: none;
		}
	}
</style>
