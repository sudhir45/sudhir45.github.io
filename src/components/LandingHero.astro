<style>
	.hero-shell {
		position: relative;
		isolation: isolate;
		overflow: hidden;
	}

	.hero-graph-canvas {
		position: absolute;
		inset: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		opacity: 0.58;
		mask-image: linear-gradient(to right, transparent 0%, rgba(0, 0, 0, 0.18) 24%, rgba(0, 0, 0, 1) 60%);
		-webkit-mask-image: linear-gradient(to right, transparent 0%, rgba(0, 0, 0, 0.18) 24%, rgba(0, 0, 0, 1) 60%);
	}

	:global(.dark) .hero-graph-canvas {
		opacity: 0.5;
	}

	@media (prefers-reduced-motion: reduce) {
		.hero-graph-canvas {
			opacity: 0.36;
		}
	}
</style>

<script>
	type GraphNode = {
		x: number;
		y: number;
		vx: number;
		vy: number;
	};

	function setupHeroGraph() {
		const shell = document.getElementById('hero-graph-shell');
		const canvas = document.getElementById('hero-graph-canvas');

		if (!(shell instanceof HTMLElement) || !(canvas instanceof HTMLCanvasElement)) return;

		const globalWindow = window as any;
		if (typeof globalWindow.__heroGraphCleanup === 'function') {
			globalWindow.__heroGraphCleanup();
		}

		const context = canvas.getContext('2d');
		if (!context) return;

		const reduceMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
		const maxDpr = 2;
		let width = 0;
		let height = 0;
		let rafId = 0;
		let nodes: GraphNode[] = [];

		const themePalette = () => {
			const dark = document.documentElement.classList.contains('dark');
			return dark
				? { line: '59, 130, 246', node: '96, 165, 250' }
				: { line: '37, 99, 235', node: '29, 78, 216' };
		};

		const makeNodes = () => {
			const density = width * height;
			const count = Math.max(20, Math.min(46, Math.floor(density / 28000)));
			nodes = Array.from({ length: count }, (): GraphNode => ({
				x: Math.random() * width,
				y: Math.random() * height,
				vx: (Math.random() - 0.5) * 0.22,
				vy: (Math.random() - 0.5) * 0.22
			}));
		};

		const resize = () => {
			width = shell.clientWidth;
			height = shell.clientHeight;

			const dpr = Math.min(window.devicePixelRatio || 1, maxDpr);
			canvas.width = Math.max(1, Math.floor(width * dpr));
			canvas.height = Math.max(1, Math.floor(height * dpr));
			context.setTransform(dpr, 0, 0, dpr, 0, 0);
			makeNodes();
		};

		const draw = () => {
			context.clearRect(0, 0, width, height);
			const colors = themePalette();
			const maxDistance = 150;

			for (let i = 0; i < nodes.length; i += 1) {
				const a = nodes[i];
				if (!a) continue;

				a.x += a.vx;
				a.y += a.vy;

				if (a.x < 0 || a.x > width) a.vx *= -1;
				if (a.y < 0 || a.y > height) a.vy *= -1;

				a.x = Math.max(0, Math.min(width, a.x));
				a.y = Math.max(0, Math.min(height, a.y));

				for (let j = i + 1; j < nodes.length; j += 1) {
					const b = nodes[j];
					if (!b) continue;

					const dx = a.x - b.x;
					const dy = a.y - b.y;
					const distance = Math.sqrt(dx * dx + dy * dy);

					if (distance < maxDistance) {
						const alpha = (1 - distance / maxDistance) * 0.22;
						context.beginPath();
						context.strokeStyle = `rgba(${colors.line}, ${alpha})`;
						context.lineWidth = 1;
						context.moveTo(a.x, a.y);
						context.lineTo(b.x, b.y);
						context.stroke();
					}
				}
			}

			for (const node of nodes) {
				context.beginPath();
				context.fillStyle = `rgba(${colors.node}, 0.35)`;
				context.arc(node.x, node.y, 1.3, 0, Math.PI * 2);
				context.fill();
			}

			if (!reduceMotion.matches) {
				rafId = window.requestAnimationFrame(draw);
			}
		};

		const resizeObserver = new ResizeObserver(() => resize());
		resizeObserver.observe(shell);

		const onVisibility = () => {
			if (document.hidden) {
				window.cancelAnimationFrame(rafId);
				return;
			}
			if (!reduceMotion.matches) {
				rafId = window.requestAnimationFrame(draw);
			}
		};

		document.addEventListener('visibilitychange', onVisibility);
		resize();
		draw();

		globalWindow.__heroGraphCleanup = () => {
			window.cancelAnimationFrame(rafId);
			resizeObserver.disconnect();
			document.removeEventListener('visibilitychange', onVisibility);
		};

		document.addEventListener(
			'astro:before-swap',
			() => {
				if (typeof globalWindow.__heroGraphCleanup === 'function') {
					globalWindow.__heroGraphCleanup();
					globalWindow.__heroGraphCleanup = undefined;
				}
			},
			{ once: true }
		);
	}

	document.addEventListener('astro:page-load', setupHeroGraph);
</script>
