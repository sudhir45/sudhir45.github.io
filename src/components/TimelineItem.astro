---
interface Props {
	title: string;
	company: string;
	location: string;
	dateRange: string;
	isLast?: boolean;
	bullets: string[];
}

const { title, company, location, dateRange, isLast = false, bullets } = Astro.props;
---

<div class="relative pl-8 pb-8">
	<!-- Timeline line -->
	{!isLast && (
		<div class="absolute left-[11px] top-3 h-full w-0.5 bg-gradient-to-b from-orange-500 to-orange-500/20 dark:from-orange-600 dark:to-orange-600/20"></div>
	)}
	
	<!-- Timeline dot -->
	<div class="absolute left-0 top-1 flex h-6 w-6 items-center justify-center">
		<div class="h-3 w-3 rounded-full bg-orange-500 ring-4 ring-orange-500/20 dark:bg-orange-600 dark:ring-orange-600/20 transition-all duration-300 hover:scale-125 hover:ring-orange-500/40"></div>
	</div>
	
	<!-- Content card -->
	<div class="group rounded-2xl bg-stone-200/50 from-orange-900 via-amber-700 to-white p-[1px] shadow-[inset_0_0_0_1px_rgba(255,255,255,0.4)] transition-all duration-300 hover:bg-gradient-to-r dark:bg-gray-900">
		<div class="rounded-[1rem] bg-stone-300 p-5 opacity-90 dark:bg-stone-800">
			<!-- Header -->
			<div class="mb-3">
				<h3 class="text-lg font-bold text-gray-900 dark:text-white">{title}</h3>
				<p class="text-sm font-semibold text-orange-600 dark:text-orange-500">{company}</p>
				<div class="mt-1 flex flex-wrap items-center gap-2 text-xs text-gray-500 dark:text-gray-400">
					<span class="flex items-center gap-1">
						<svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
						</svg>
						{dateRange}
					</span>
					<span>â€¢</span>
					<span class="flex items-center gap-1">
						<svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
						{location}
					</span>
				</div>
			</div>
			
			<!-- Bullet points -->
			<ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
				{bullets.map((bullet) => (
					<li class="flex items-start gap-2">
						<span class="mt-1.5 h-1.5 w-1.5 flex-shrink-0 rounded-full bg-orange-500/60 dark:bg-orange-500/40"></span>
						<span>{bullet}</span>
					</li>
				))}
			</ul>
		</div>
	</div>
</div>
