---
import Section from './Section.astro';

const year = new Date();
---

<Section>
	<footer class="border-t border-zinc-200/60 py-8 dark:border-zinc-800/60">
		<div class="flex flex-col items-center justify-between gap-4 text-sm text-zinc-600 dark:text-zinc-500 sm:flex-row">
			<div class="flex items-center gap-4">
				<a class="link-underline transition-colors hover:text-blue-600 dark:hover:text-blue-400" href="/rss.xml">RSS</a>
				<span class="text-zinc-300 dark:text-zinc-700">·</span>
				<a class="link-underline transition-colors hover:text-blue-600 dark:hover:text-blue-400" href="/sitemap-index.xml">Sitemap</a>
				<span class="text-zinc-300 dark:text-zinc-700">·</span>
				<a class="link-underline transition-colors hover:text-blue-600 dark:hover:text-blue-400" href="/tags">Tags</a>
			</div>
			<div>
				© {year.getFullYear()} <a
					class="font-medium link-underline transition-colors hover:text-blue-600 dark:hover:text-blue-400"
					href="https://sudhir.is-a.dev"
					target="_blank"
					rel="noopener noreferrer"
				>Sudhir</a>
			</div>
		</div>
	</footer>
</Section>
