---
import Section from './Section.astro';

// Featured post data - hardcoded for "Balancing Act"
const featuredPost = {
	title: "Balancing Act: Why Good Enough Security is the Real Hero",
	excerpt: "An exploration of why 'good enough' security is often better than perfect security, and how to find the right balance between safety and usability.",
	url: "/posts/good-enough-security",
	readingTime: "6 min read",
};
---

<Section>
	<div class="my-4">
		<a 
			href={featuredPost.url}
			class="group block rounded-lg border border-gray-200 bg-white p-5 shadow-sm transition-all hover:border-orange-400 dark:border-gray-700 dark:bg-stone-800 dark:hover:border-orange-500"
		>
			<div class="flex items-start justify-between">
				<div class="flex-1">
					<span class="text-xs font-medium uppercase tracking-wide text-orange-600">
						Featured
					</span>
					<h3 class="mt-2 text-lg font-bold text-gray-900 group-hover:text-orange-600 dark:text-white dark:group-hover:text-orange-500">
						{featuredPost.title}
					</h3>
					<p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
						{featuredPost.excerpt}
					</p>
					<div class="mt-3 flex items-center text-xs text-gray-500 dark:text-gray-400">
						<span>{featuredPost.readingTime}</span>
						<span class="mx-2">Â·</span>
						<span class="inline-flex items-center group-hover:text-orange-600 dark:group-hover:text-orange-500">
							Read more
							<svg class="ml-1 h-3 w-3 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</span>
					</div>
				</div>
			</div>
		</a>
	</div>
</Section>
