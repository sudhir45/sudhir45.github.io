---
import Section from './Section.astro';

// Featured post data - hardcoded for "Why Theoretical Security Fails in Production"
const featuredPost = {
	title: "Why Theoretical Security Fails in Production",
	excerpt: "Why theoretical security fails in production, and how 'good enough' controls actually survive enterprise environments.",
	url: "/posts/good-enough-security",
	readingTime: "6 min read",
};
---

<Section>
	<div class="-mt-2 mb-0">
		<a 
			href={featuredPost.url}
			class="group block overflow-hidden rounded-xl border border-stone-200 bg-gradient-to-br from-orange-50/50 to-white p-6 shadow-sm transition-all hover:border-orange-300 hover:shadow-md dark:border-stone-800 dark:from-orange-950/20 dark:to-stone-900 dark:hover:border-orange-900/50"
		>
			<div class="flex items-start gap-4">
				<div class="flex-shrink-0">
					<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-orange-100 dark:bg-orange-950/50">
						<svg class="h-5 w-5 text-orange-600 dark:text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
						</svg>
					</div>
				</div>
				<div class="flex-1">
					<span class="mb-2 inline-block text-xs font-semibold uppercase tracking-wider text-orange-600 dark:text-orange-500">
						Featured
					</span>
					<h3 class="mb-2 text-xl font-semibold leading-tight text-stone-900 transition-colors group-hover:text-orange-600 dark:text-stone-100 dark:group-hover:text-orange-500">
						{featuredPost.title}
					</h3>
					<p class="mb-4 text-sm leading-relaxed text-stone-600 dark:text-stone-400">
						{featuredPost.excerpt}
					</p>
					<div class="flex items-center gap-3 text-xs text-stone-500 dark:text-stone-500">
						<span>{featuredPost.readingTime}</span>
						<span class="inline-flex items-center gap-1 font-medium text-orange-600 transition-colors group-hover:gap-2 dark:text-orange-500">
							Read more
							<svg class="h-3.5 w-3.5 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</span>
					</div>
				</div>
			</div>
		</a>
	</div>
</Section>
