---
interface Props {
	tag: string;
	withHref?: boolean;
}

const { tag, withHref } = Astro.props;
---

<span
	class={`inline-flex items-center rounded-md border border-zinc-200 bg-zinc-50 px-2.5 py-1 text-xs font-medium text-zinc-700 transition-colors dark:border-zinc-800 dark:bg-zinc-900 dark:text-zinc-300 ${
		withHref ? 'hover:border-blue-300 hover:bg-blue-50 hover:text-blue-700 dark:hover:border-blue-800/50 dark:hover:bg-blue-950/30 dark:hover:text-blue-400' : ''
	}`}
>
	{tag}
</span>
