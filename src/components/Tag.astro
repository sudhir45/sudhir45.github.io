---
interface Props {
	tag: string;
	withHref?: boolean;
}

const { tag, withHref } = Astro.props;
---

<span
	class={`inline-flex items-center rounded-md border border-stone-200 bg-stone-50 px-2.5 py-1 text-xs font-medium text-stone-700 transition-colors dark:border-stone-800 dark:bg-stone-900 dark:text-stone-300 ${
		withHref ? 'hover:border-orange-300 hover:bg-orange-50 hover:text-orange-700 dark:hover:border-orange-900/50 dark:hover:bg-orange-950/30 dark:hover:text-orange-400' : ''
	}`}
>
	{tag}
</span>
