// Random tip selection at build time / page load
const randomTip = securityTips[Math.floor(Math.random() * securityTips.length)];
---

<Section>
	<div class="rounded-xl border border-stone-200 bg-gradient-to-br from-orange-50/50 to-white px-6 py-5 shadow-sm dark:border-stone-800 dark:from-orange-950/20 dark:to-stone-900 -mb-2">
		<div class="flex items-start gap-3">
			<div class="mt-0.5 flex-shrink-0">
				<svg class="h-5 w-5 text-orange-600 dark:text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
			</div>
			<div class="flex-1">
				<p class="mb-2 text-xs font-semibold uppercase tracking-wider text-orange-600 dark:text-orange-500">
					Security Tip
				</p>
				<p class="text-sm leading-relaxed text-stone-700 dark:text-stone-300">
					{randomTip}
				</p>
			</div>
		</div>
	</div>
</Section>
