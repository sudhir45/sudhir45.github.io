---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a
	href={href}
	target="_blank"
	rel="noopener noreferrer"
	class="flex h-10 w-10 items-center justify-center rounded-lg border border-stone-200 bg-white text-stone-600 transition-all hover:border-orange-300 hover:bg-orange-50 hover:text-orange-600 dark:border-stone-800 dark:bg-stone-900 dark:text-stone-400 dark:hover:border-orange-900/50 dark:hover:bg-orange-950/30 dark:hover:text-orange-500"
>
	<slot />
</a>
