---
import PinIcon from './PinIcon.astro';

interface Props {
	size?: 'sm' | 'md' | 'lg';
	class?: string;
}

const { size = 'md', class: className = '' } = Astro.props;

// Define size classes for different badge sizes
const badgeSizeClasses = {
	sm: 'px-2 py-0.5 text-xs',
	md: 'px-2.5 py-1 text-sm',
	lg: 'px-3 py-1.5 text-base'
};

const badgeSize = badgeSizeClasses[size];
---

<span
	class={`inline-flex items-center gap-1 rounded-md border border-blue-200 bg-blue-50 ${badgeSize} font-medium text-blue-700 dark:border-blue-900/50 dark:bg-blue-950/30 dark:text-blue-400 ${className}`}
>
	<PinIcon size={size} />
	<span>Pinned</span>
</span>
